@using CampaignManager.Web.Model

<div class="bg-white shadow rounded-lg p-4 mb-4">
    <h4 class="text-lg font-semibold mb-3">Навыки</h4>

    <!-- Трехколоночный макет (для lg экранов) -->
    <div class="hidden lg:grid lg:grid-cols-3 gap-4">
        <SkillGroupColumn Groups="@Model.SkillGroups.Take(2).ToList()" />
        <SkillGroupColumn Groups="@Model.SkillGroups.Skip(2).Take(3).ToList()" />
        <SkillGroupColumn Groups="@Model.SkillGroups.Skip(5).ToList()" />
    </div>

    <!-- Двухколоночный макет (для экранов от 600px до lg) -->
    <div class="hidden sm:grid sm:grid-cols-2 lg:hidden gap-4">
        <SkillGroupColumn Groups="@Model.SkillGroups.Take(4).ToList()" />
        <SkillGroupColumn Groups="@Model.SkillGroups.Skip(4).ToList()" />
    </div>

    <!-- Одноколоночный макет (для экранов меньше sm) -->
    <div class="grid grid-cols-1 sm:hidden gap-4">
        <SkillGroupColumn Groups="@Model.SkillGroups.ToList()" />
    </div>
</div>

@code {
    [Parameter] public SkillsModel Model { get; set; }
}