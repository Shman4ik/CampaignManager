<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Left Column -->
    <div class="space-y-4">
        <div>
            <label for="bio-appearance" class="block text-sm font-medium text-gray-700 mb-1">Описание</label>
            <InitialSizeTextArea id="bio-appearance" InitialRows="2" @bind-Value="Character.Biography.Appearance" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-ideals" class="block text-sm font-medium text-gray-700 mb-1">Идеалы и принципы</label>
            <InitialSizeTextArea id="bio-ideals" InitialRows="2" @bind-Value="Character.Biography.IdealsAndPrinciples" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-people" class="block text-sm font-medium text-gray-700 mb-1">Значимые люди</label>
            <InitialSizeTextArea id="bio-people" InitialRows="2" @bind-Value="Character.Biography.SignificantPeople" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-places" class="block text-sm font-medium text-gray-700 mb-1">Важные места</label>
            <InitialSizeTextArea id="bio-places" InitialRows="2" @bind-Value="Character.Biography.ImportantPlaces" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-possessions" class="block text-sm font-medium text-gray-700 mb-1">Ценное имущество</label>
            <InitialSizeTextArea id="bio-possessions" InitialRows="2" @bind-Value="Character.Biography.ValuablePossessions" class="w-full p-2 border border-gray-300 rounded"/>
        </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-4">
        <div>
            <label for="bio-traits" class="block text-sm font-medium text-gray-700 mb-1">Черты</label>
            <InitialSizeTextArea id="bio-traits" InitialRows="2" @bind-Value="Character.Biography.Traits" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-injuries" class="block text-sm font-medium text-gray-700 mb-1">Травмы и Шрамы</label>
            <InitialSizeTextArea id="bio-injuries" InitialRows="2" @bind-Value="Character.Biography.Injuries" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-phobias" class="block text-sm font-medium text-gray-700 mb-1">Фобии и Мании</label>
            <InitialSizeTextArea id="bio-phobias" InitialRows="2" @bind-Value="Character.Biography.Phobias" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-magic" class="block text-sm font-medium text-gray-700 mb-1">Магические книги, Заклинания и Aртефакты</label>
            <InitialSizeTextArea id="bio-magic" InitialRows="2" @bind-Value="Character.Biography.MagicalItems" class="w-full p-2 border border-gray-300 rounded"/>
        </div>

        <div>
            <label for="bio-supernatural" class="block text-sm font-medium text-gray-700 mb-1">Встречи со сверхъестественным</label>
            <InitialSizeTextArea id="bio-supernatural" InitialRows="2" @bind-Value="Character.Biography.SupernaturalEncounters" class="w-full p-2 border border-gray-300 rounded"/>
        </div>
    </div>
</div>

@code {
    [Parameter] public Character Character { get; set; } = null!;
}
