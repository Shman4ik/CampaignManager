@using CampaignManager.Web.Components.Features.Characters.Model
<div class="w-full">
    <table class="w-full text-xs table-fixed">
        <thead>
        <tr class="border-b border-gray-300">
            <th class="text-left w-12 pb-1 font-semibold text-gray-600"></th>
            <th class="w-12 text-center pb-1 text-xs font-semibold text-gray-600">Обыч.</th>
            <th class="w-12 text-center pb-1 text-xs font-semibold text-gray-600">Труд.</th>
            <th class="w-12 text-center pb-1 text-xs font-semibold text-gray-600">Чрез.</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var prop in typeof(Characteristics).GetProperties())
        {
            var value = prop.GetValue(Characteristics) as AttributeValue;
            if (value != null)
            {
                <tr class="border-b border-gray-100 hover:bg-primary-50/50 transition-colors duration-150">
                    <td class="py-1 pr-1">
                        <span class="inline-block px-1.5 py-0.5 text-xs font-semibold text-primary-700 bg-primary-100 rounded">@GetShortName(prop.Name)</span>
                    </td>
                    <td class="py-1 px-0.5">
                        <input type="number" @bind="value.Regular" @bind:event="oninput"
                               @onchange="() => OnUpdate.InvokeAsync(value)"
                               class="w-full p-1 text-center text-xs border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-primary-500 focus:border-primary-500"/>
                    </td>
                    <td class="py-1 px-0.5">
                        <input type="number" value="@value.Half" disabled
                               class="w-full p-1 text-center text-xs bg-gray-100 border border-gray-200 rounded text-gray-500"/>
                    </td>
                    <td class="py-1 px-0.5">
                        <input type="number" value="@value.Fifth" disabled
                               class="w-full p-1 text-center text-xs bg-gray-100 border border-gray-200 rounded text-gray-500"/>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public required Characteristics Characteristics { get; set; }
    [Parameter] public EventCallback<AttributeValue> OnUpdate { get; set; }

    private string GetShortName(string fullName)
    {
        var shortNames = new Dictionary<string, string>
        {
            { "Strength", "СИЛ" },
            { "Constitution", "ВЫН" },
            { "Size", "ТЕЛ" },
            { "Dexterity", "ЛВК" },
            { "Appearance", "НАР" },
            { "Intelligence", "ИНТ" },
            { "Power", "МОЩ" },
            { "Education", "ОБР" }
        };

        return shortNames.TryGetValue(fullName, out var shortName) ? shortName : fullName;
    }

}