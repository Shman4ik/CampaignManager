@using CampaignManager.Web.Components.Features.Characters.Model

<div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-4">
        <!-- Three column layout with vertical dividers -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:divide-x md:divide-gray-200">
            <!-- Column 1: Personal Information -->
            <div class="space-y-1.5">
                <h5 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2 pb-1 border-b border-gray-200">
                    Персональная информация
                </h5>
                
                <CustomInput Label="Игрок" Value="@Character.PersonalInfo.PlayerName" LabelClass="min-w-[70px] text-xs"
                             OnValueChanged="@(v => Character.PersonalInfo.PlayerName = v)"/>

                <CustomInput Label="Имя" Value="@Character.PersonalInfo.Name" LabelClass="min-w-[70px] text-xs"
                             OnValueChanged="@(v => Character.PersonalInfo.Name = v)"/>

                <CustomInput Label="Профессия" Value="@Character.PersonalInfo.Occupation" LabelClass="min-w-[70px] text-xs"
                             OnValueChanged="@(v => Character.PersonalInfo.Occupation = v)"/>

                <div class="grid grid-cols-2 gap-x-2">
                    <CustomInput Label="Возраст" Type="number" Value="@Character.PersonalInfo.Age.ToString()" 
                                 LabelClass="min-w-[50px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.Age = int.TryParse(v, out var age) ? age : 0)"/>

                    <CustomInput Label="Пол" Value="@Character.PersonalInfo.Gender" 
                                 LabelClass="min-w-[30px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.Gender = v)"/>
                </div>

                <CustomInput Label="Место рож." Value="@Character.PersonalInfo.Birthplace" LabelClass="min-w-[70px] text-xs"
                             OnValueChanged="@(v => Character.PersonalInfo.Birthplace = v)"/>

                <CustomInput Label="Место жит." Value="@Character.PersonalInfo.Residence" LabelClass="min-w-[70px] text-xs"
                             OnValueChanged="@(v => Character.PersonalInfo.Residence = v)"/>
                
                <div class="grid grid-cols-2 gap-x-2">
                    <CustomInput Label="Б.К.У." Value="@Character.PersonalInfo.DamageBonus" 
                                 LabelClass="min-w-[45px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.DamageBonus = v)"/>

                    <CustomInput Label="Комп." Value="@Character.PersonalInfo.Build" 
                                 LabelClass="min-w-[45px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.Build = v)"/>
                </div>
                
                <div class="grid grid-cols-2 gap-x-2">
                    <CustomInput Label="Скор." Type="number" Value="@Character.PersonalInfo.MoveSpeed.ToString()" 
                                 LabelClass="min-w-[45px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.MoveSpeed = int.TryParse(v, out var speed) ? speed : 0)"/>

                    <CustomInput Label="Укло." Type="number" Value="@Character.PersonalInfo.Dodge.ToString()" 
                                 LabelClass="min-w-[45px] text-xs" ContainerClass="flex items-center gap-1"
                                 OnValueChanged="@(v => Character.PersonalInfo.Dodge = int.TryParse(v, out var dodge) ? dodge : 0)"/>
                </div>
            </div>

            <!-- Column 2: Characteristics -->
            <div class="md:pl-4">
                <h5 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2 pb-1 border-b border-gray-200">
                    Характеристики
                </h5>
                <div class="bg-gray-50 rounded-md p-2">
                    <AttributeRowsTable Characteristics="@Character.Characteristics" OnUpdate="@OnCharacteristicUpdate"/>
                </div>
            </div>

            <!-- Column 3: State (Derived Attributes + Character State) -->
            <div class="md:pl-4">
                <h5 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2 pb-1 border-b border-gray-200">
                    Состояние
                </h5>
                <div class="bg-gray-50 rounded-md p-2 space-y-3">
                    <!-- Derived Attributes -->
                    <div>
                        <DerivedAttributesTable Attributes="@Character.DerivedAttributes"/>
                    </div>
                    
                    <!-- Character State -->
                    <div class="border-t border-gray-300 pt-2">
                        <CharacterStateTable State="@Character.State"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public required Character Character { get; set; }
    [Parameter] public CharacterStorageDto? CharacterStorageDto { get; set; }
    [Parameter] public EventCallback<CharacterStatus> OnStatusUpdated { get; set; }
    [Parameter] public EventCallback<AttributeValue> OnCharacteristicUpdate { get; set; }
}
