@using CampaignManager.Web.Components.Features.Characters.Model
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Left Column -->
    <div class="space-y-4">
        <div>
            <label for="bio-appearance" class="cm-text-subtle block mb-1">Описание</label>
            <textarea id="bio-appearance" rows="2" @bind="Character.Biography.Appearance"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-ideals" class="cm-text-subtle block mb-1">Идеалы и принципы</label>
            <textarea id="bio-ideals" rows="2" @bind="Character.Biography.IdealsAndPrinciples"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-people" class="cm-text-subtle block mb-1">Значимые люди</label>
            <textarea id="bio-people" rows="2" @bind="Character.Biography.SignificantPeople"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-places" class="cm-text-subtle block mb-1">Важные места</label>
            <textarea id="bio-places" rows="2" @bind="Character.Biography.ImportantPlaces"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-possessions" class="cm-text-subtle block mb-1">Ценное имущество</label>
            <textarea id="bio-possessions" rows="2"
                    @bind="Character.Biography.ValuablePossessions"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-4">
        <div>
            <label for="bio-traits" class="cm-text-subtle block mb-1">Черты</label>
            <textarea id="bio-traits" rows="2" @bind="Character.Biography.Traits"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-injuries" class="cm-text-subtle block mb-1">Травмы и Шрамы</label>
            <textarea id="bio-injuries" rows="2" @bind="Character.Biography.Injuries"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-phobias" class="cm-text-subtle block mb-1">Фобии и Мании</label>
            <textarea id="bio-phobias" rows="2" @bind="Character.Biography.Phobias"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-magic" class="cm-text-subtle block mb-1">Магические книги, Заклинания и
                Aртефакты</label>
            <textarea id="bio-magic" rows="2" @bind="Character.Biography.MagicalItems"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>

        <div>
            <label for="bio-supernatural" class="cm-text-subtle block mb-1">Встречи со
                сверхъестественным</label>
            <textarea id="bio-supernatural" rows="2"
                    @bind="Character.Biography.SupernaturalEncounters"
                    class="w-full p-2 border border-gray-300 rounded"></textarea>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Character Character { get; set; } = default!;
}
