@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public object? Value { get; set; }
    [Parameter] public string? DiceRoll { get; set; }
}

<div>
    <span class="font-medium">@Label:</span> @(Value?.ToString() ?? "-")
    @if (!string.IsNullOrWhiteSpace(DiceRoll))
    {
        <span class="text-xs text-gray-500 ml-1">(@DiceRoll)</span>
    }
</div>
