@inject CampaignService CampaignService
@inject NavigationManager NavigationManager

<div class="bg-white shadow-md rounded-lg p-4 mt-4">
    <h3 class="text-xl font-bold mb-4">Создать новую кампанию</h3>
    <div class="mb-4">
        <label for="campaignName" class="block text-sm font-medium text-gray-700">Название кампании</label>
        <input type="text" id="campaignName" @bind="campaignName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
    </div>
    <button @onclick="CreateCampaign" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
        Создать кампанию
    </button>
</div>

@code
{
    private string campaignName = "";

    private async Task CreateCampaign()
    {
        if (!string.IsNullOrWhiteSpace(campaignName))
        {
            await CampaignService.CreateCampaignAsync(campaignName);

            campaignName = string.Empty;

            NavigationManager.NavigateTo("/", forceLoad: true);
        }
    }   

}