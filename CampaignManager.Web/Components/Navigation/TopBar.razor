@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<style>
    .google-btn {
        display: inline-flex;
        align-items: center;
        height: 40px;
        background-color: white;
        border: 1px solid #dadce0;
        border-radius: 4px;
        box-shadow: 0 1px 3px rgba(0,0,0,.08);
        padding: 0;
        cursor: pointer;
        overflow: hidden;
        transition: background-color .218s, border-color .218s, box-shadow .218s;
    }

        .google-btn:hover {
            box-shadow: 0 1px 3px rgba(0,0,0,.12);
            border-color: #d2e3fc;
            background-color: #f8f9fa;
        }

    .google-icon-wrapper {
        width: 40px;
        height: 40px;
        padding: 8px;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .google-icon {
        width: 18px;
        height: 18px;
    }

    .btn-text {
        padding: 0 16px;
        font-family: 'Roboto', sans-serif;
        font-size: 14px;
        font-weight: 500;
        color: #3c4043;
    }

    /* Mobile menu styles */
    .mobile-menu-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 40;
        transition: opacity 0.3s ease;
    }

    .mobile-menu {
        position: fixed;
        top: 0;
        right: 0;
        width: 75%;
        max-width: 300px;
        height: 100%;
        background-color: white;
        z-index: 50;
        transform: translateX(100%);
        transition: transform 0.3s ease;
        overflow-y: auto;
        box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    }

    .mobile-menu.open {
        transform: translateX(0);
    }

    .mobile-menu-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .mobile-menu-content {
        padding: 1rem;
    }

    .mobile-menu-item {
        display: block;
        padding: 0.75rem 0;
        border-bottom: 1px solid #f3f4f6;
    }

    /* Hamburger menu icon */
    .hamburger {
        display: none;
        cursor: pointer;
        padding: 10px;
    }

    @@media (max-width: 768px) {
        .hamburger {
            display: block;
        }

        .desktop-nav {
            display: none;
        }

        .app-title {
            font-size: 1.25rem !important;
        }
    }
</style>

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="text-2xl font-semibold text-gray-900 mr-8 app-title">Менеджер кампаний</h1>

                            <div class="desktop-nav">
                                <NavMenu />
                            </div>
                        </div>

                        <div class="flex items-center">
                            <span class="text-gray-700 mr-4 hidden md:inline">@context.User.Identity?.Name</span>
                            <button @onclick="Logout"
                                    class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded hidden md:block">
                                Выйти
                            </button>
                            <div class="hamburger" @onclick="ToggleMobileMenu">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            @if (mobileMenuOpen)
            {
                <div class="mobile-menu-overlay" @onclick="ToggleMobileMenu"></div>
                <div class="mobile-menu @(mobileMenuOpen ? "open" : "")">
                    <div class="mobile-menu-header">
                        <h2 class="text-xl font-semibold">Меню</h2>
                        <button @onclick="ToggleMobileMenu" class="text-gray-500 hover:text-gray-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <div class="mobile-menu-content">
                        <div class="mb-6">
                            <span class="block text-sm font-medium text-gray-700 mb-2">Пользователь:</span>
                            <span class="block text-gray-900">@context.User.Identity?.Name</span>
                        </div>
                        <div class="mb-6">
                            <span class="block text-sm font-medium text-gray-700 mb-2">Навигация:</span>
                            <NavMenu />
                        </div>
                        <button @onclick="Logout"
                                class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                            Выйти
                        </button>
                    </div>
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="text-2xl font-semibold text-gray-900 mr-8 app-title">Менеджер кампаний</h1>
                        </div>

                        <div class="flex items-center">
                            <a href="/api/account/login" class="google-btn">
                                <div class="google-icon-wrapper">
                                    <svg class="google-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                                        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z" />
                                        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z" />
                                        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z" />
                                        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z" />
                                        <path fill="none" d="M0 0h48v48H0z" />
                                    </svg>
                                </div>
                                <span class="btn-text hidden sm:inline">Войти с Google</span>
                                <span class="btn-text sm:hidden">Войти</span>
                            </a>
                        </div>
                    </div>
                </div>
            </header>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private bool mobileMenuOpen = false;

    private void Logout()
    {
        NavigationManager.NavigateTo("api/account/logout", true);
    }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }
}
