@code {
    private bool mobileMenuOpen;
    private string? openDropdownId;
    private readonly HashSet<string> openMobileSubmenus = new();
    private bool silentLoginFailed;
    private bool hasRendered;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // Parse query parameters without JS interop
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var queryParams = QueryHelpers.ParseQuery(uri.Query);

        if (queryParams.TryGetValue("authStatus", out var authStatus) &&
            authStatus.ToString() == "silentFailed")
        {
            silentLoginFailed = true;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);

        if (firstRender)
        {
            hasRendered = true;

            // Handle silent login failure notification
            if (silentLoginFailed)
            {
                try
                {
                    var module = await JS.InvokeAsync<IJSObjectReference>("import", "/js/topbar-auth.js");
                    await module.InvokeVoidAsync("noteSilentFailure");
                }
                catch
                {
                    // Ignore JS interop errors during initialization
                }

                // Clean up URL by removing the authStatus query parameter
                var cleanUrl = NavigationManager.Uri.Split('?')[0];
                NavigationManager.NavigateTo(cleanUrl, replace: true);
            }

            // Check authentication and handle silent login
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (!user.Identity?.IsAuthenticated ?? true)
            {
                try
                {
                    // Import the module and check if we should skip silent login
                    var module = await JS.InvokeAsync<IJSObjectReference>("import", "/js/topbar-auth.js");
                    var shouldSkip = await module.InvokeAsync<bool>("shouldSkipSilentLogin");

                    if (!shouldSkip)
                    {
                        await module.InvokeVoidAsync("markSilentAttempt");
                        var returnUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
                        NavigationManager.NavigateTo($"/api/account/login?mode=silent&returnUrl={Uri.EscapeDataString(returnUrl)}", true);
                    }
                }
                catch
                {
                    // Ignore JS interop errors - user can manually login
                }
            }
        }
    }

    private async Task Logout()
    {
        if (hasRendered)
        {
            try
            {
                var module = await JS.InvokeAsync<IJSObjectReference>("import", "/js/topbar-auth.js");
                await module.InvokeVoidAsync("setSkipSilentLogin");
            }
            catch
            {
                // Ignore JS interop errors
            }
        }
        NavigationManager.NavigateTo("api/account/logout", true);
    }

    private async Task ManualLogin()
    {
        if (hasRendered)
        {
            try
            {
                var module = await JS.InvokeAsync<IJSObjectReference>("import", "/js/topbar-auth.js");
                await module.InvokeVoidAsync("clearSilentFlags");
            }
            catch
            {
                // Ignore JS interop errors
            }
        }
        var returnUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.NavigateTo($"/api/account/login?mode=interactive&returnUrl={Uri.EscapeDataString(returnUrl)}", true);
    }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
        if (!mobileMenuOpen)
        {
            openMobileSubmenus.Clear();
        }
    }

    private void HandleOverlayClick()
    {
        ToggleMobileMenu();
    }

    private void ToggleDropdown(string dropdownId)
    {
        openDropdownId = openDropdownId == dropdownId ? null : dropdownId;
    }

    private void CloseDropdowns()
    {
        openDropdownId = null;
    }

    private bool IsDropdownOpen(string dropdownId)
    {
        return openDropdownId == dropdownId;
    }

    private void ToggleMobileSubmenu(string submenuId)
    {
        if (openMobileSubmenus.Contains(submenuId))
        {
            openMobileSubmenus.Remove(submenuId);
        }
        else
        {
            openMobileSubmenus.Add(submenuId);
        }
    }

    private bool IsMobileSubmenuOpen(string submenuId)
    {
        return openMobileSubmenus.Contains(submenuId);
    }

}