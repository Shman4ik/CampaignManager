@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="text-2xl font-semibold text-gray-900 mr-8 app-title">Менеджер кампаний</h1>
                            <div class="hidden md:block">
                                <NavMenu />
                            </div>
                        </div>

                        <div class="flex items-center">
                            <span class="text-gray-700 mr-4 hidden md:inline">@context.User.Identity?.Name</span>
                            <button @onclick="Logout"
                                    class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded hidden md:block transition duration-200">
                                Выйти
                            </button>
                            <button @onclick="ToggleMobileMenu" class="md:hidden focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </header>

            @if (mobileMenuOpen)
            {
                <div class="fixed inset-0 bg-black bg-opacity-50 z-40 transition-opacity duration-300" @onclick="ToggleMobileMenu"></div>
                <div class="fixed top-0 right-0 w-3/4 max-w-sm h-full bg-white z-50 transform transition-transform duration-300 ease-in-out @(mobileMenuOpen ? "" : "translate-x-full") shadow-lg overflow-y-auto">
                    <div class="flex justify-between items-center p-4 border-b border-gray-200">
                        <h2 class="text-xl font-semibold">Меню</h2>
                        <button @onclick="ToggleMobileMenu" class="text-gray-500 hover:text-gray-700 transition duration-200 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <div class="mb-6">
                            <span class="block text-sm font-medium text-gray-700 mb-2">Пользователь:</span>
                            <span class="block text-gray-900">@context.User.Identity?.Name</span>
                        </div>
                        <div class="mb-6">
                            <span class="block text-sm font-medium text-gray-700 mb-2">Навигация:</span>
                            <div class="space-y-2">
                                <NavMenu />
                            </div>
                        </div>
                        <button @onclick="Logout"
                                class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition duration-200">
                            Выйти
                        </button>
                    </div>
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center">
                        <h1 class="text-2xl font-semibold text-gray-900 app-title">Менеджер кампаний</h1>
                        <a href="/api/account/login" class="inline-flex items-center h-10 bg-white border border-gray-300 rounded-md shadow-sm px-4 py-2 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200">
                            <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z" />
                                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z" />
                                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z" />
                                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z" />
                                <path fill="none" d="M0 0h48v48H0z" />
                            </svg>
                            <span class="hidden sm:inline">Войти с Google</span>
                            <span class="sm:hidden">Войти</span>
                        </a>
                    </div>
                </div>
            </header>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private bool mobileMenuOpen = false;

    private void Logout()
    {
        NavigationManager.NavigateTo("api/account/logout", true);
    }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }
}