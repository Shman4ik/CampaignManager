@namespace CampaignManager.Web.Components.Shared

<span class="@GetBadgeClasses()">
    @ChildContent
</span>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string Status { get; set; } = "default";
    
    [Parameter]
    public bool Outline { get; set; }
    
    [Parameter]
    public bool Small { get; set; }
    
    private string GetBadgeClasses()
    {
        var sizeClasses = Small ? "px-2 py-0.5 text-xs" : "px-3 py-1 text-sm";
        
        return Status.ToLower() switch
        {
            "success" => Outline 
                ? $"border border-success-500 text-success-500 rounded-md {sizeClasses}"
                : $"bg-success-100 text-success-800 rounded-md {sizeClasses}",
                
            "warning" => Outline 
                ? $"border border-warning-500 text-warning-600 rounded-md {sizeClasses}"
                : $"bg-warning-100 text-warning-800 rounded-md {sizeClasses}",
                
            "error" => Outline 
                ? $"border border-error-500 text-error-600 rounded-md {sizeClasses}"
                : $"bg-error-100 text-error-800 rounded-md {sizeClasses}",
                
            "info" => Outline 
                ? $"border border-info-500 text-info-600 rounded-md {sizeClasses}"
                : $"bg-info-100 text-info-800 rounded-md {sizeClasses}",
                
            "primary" => Outline 
                ? $"border border-primary-500 text-primary-600 rounded-md {sizeClasses}"
                : $"bg-primary-100 text-primary-800 rounded-md {sizeClasses}",
                
            "secondary" => Outline 
                ? $"border border-secondary-500 text-secondary-600 rounded-md {sizeClasses}"
                : $"bg-secondary-100 text-secondary-800 rounded-md {sizeClasses}",
                
            "accent" => Outline 
                ? $"border border-accent-500 text-accent-600 rounded-md {sizeClasses}"
                : $"bg-accent-100 text-accent-800 rounded-md {sizeClasses}",
                
            _ => $"bg-secondary-100 text-secondary-800 rounded-md {sizeClasses}"
        };
    }
}
