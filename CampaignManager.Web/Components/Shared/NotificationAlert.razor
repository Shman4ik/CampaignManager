@using Microsoft.AspNetCore.Components

<div class="@GetNotificationClass() p-4 mb-4 rounded-md flex justify-between items-center">
    <span>@Message</span>
    <button @onclick="OnClose" class="text-xl">&times;</button>
</div>

@code {
    [Parameter] public string Type { get; set; } = "info";
    [Parameter] public string Message { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private string GetNotificationClass()
    {
        return Type switch
        {
            "success" => "bg-green-100 text-green-800 border border-green-200",
            "warning" => "bg-yellow-100 text-yellow-800 border border-yellow-200",
            "error" => "bg-red-100 text-red-800 border border-red-200",
            _ => "bg-blue-100 text-blue-800 border border-blue-200"
        };
    }
}