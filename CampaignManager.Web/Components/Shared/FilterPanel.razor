@namespace CampaignManager.Web.Components.Shared

<div class="sticky top-0 z-10 bg-white rounded-lg shadow-md p-3 mb-4 border border-gray-200">
	<div class="flex justify-between items-center mb-2">
        <div class="flex items-center">
            <h2 class="text-base font-semibold text-gray-700 mr-2">@Title</h2>
            <button @onclick="TogglePanel" 
                    class="text-gray-500 hover:text-gray-700 transition-colors">
                <i class="fas @(IsExpanded ? "fa-chevron-up" : "fa-chevron-down")"></i>
            </button>
        </div>
		<div class="flex space-x-2">
            @ActionButtons
        </div>
    </div>

    @if (IsExpanded)
    {
		<div class="mb-3">
            @ChildContent
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Фильтры";
    [Parameter] public bool IsExpanded { get; set; } = true;
    [Parameter] public EventCallback<bool> IsExpandedChanged { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? ActionButtons { get; set; }

    private async Task TogglePanel()
    {
        IsExpanded = !IsExpanded;
        await IsExpandedChanged.InvokeAsync(IsExpanded);
    }
}
