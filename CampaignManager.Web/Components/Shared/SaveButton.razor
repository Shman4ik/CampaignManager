<Button OnClick="OnClick"
        IsDisabled="@IsLoading"
        Variant="success"
        Icon="@(IsLoading ? "fa-spinner fa-spin" : null)"
        AdditionalClasses="mr-2">
    @(IsLoading ? "Сохранение..." : ChildContent)
</Button>

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; } = builder => builder.AddContent(0, "Сохранить");
}