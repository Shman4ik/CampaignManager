@namespace CampaignManager.Web.Components.Shared

<div class="@GetAlertClasses()">
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="font-medium">@Title</div>
    }
    <div>@ChildContent</div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string Type { get; set; } = "info";
    
    [Parameter]
    public string? Title { get; set; }
    
    private string GetAlertClasses()
    {
        var baseClasses = "p-4 rounded-md mb-4";
        
        return Type.ToLower() switch
        {
            "success" => $"bg-success-50 text-success-900 border border-success-200 {baseClasses}",
            "warning" => $"bg-warning-50 text-warning-900 border border-warning-200 {baseClasses}",
            "error" => $"bg-error-50 text-error-900 border border-error-200 {baseClasses}",
            "info" => $"bg-info-50 text-info-900 border border-info-200 {baseClasses}",
            "primary" => $"bg-primary-50 text-primary-900 border border-primary-200 {baseClasses}",
            "secondary" => $"bg-secondary-50 text-secondary-900 border border-secondary-200 {baseClasses}",
            "accent" => $"bg-accent-50 text-accent-900 border border-accent-200 {baseClasses}",
            _ => $"bg-info-50 text-info-900 border border-info-200 {baseClasses}"
        };
    }
}
