@namespace CampaignManager.Web.Components.Shared

<div class="bg-white rounded-xl shadow-md p-8 text-center border border-gray-200">
    <div class="flex flex-col items-center justify-center py-12">
        <div class="rounded-full bg-gradient-to-br from-gray-100 to-gray-200 p-6 mb-6">
            <i class="fas @IconClass text-gray-400 text-4xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">@Title</h3>
        <p class="text-gray-600 text-base">
            @Message
        </p>
        @if (ActionButton != null)
        {
            <div class="mt-6">
                @ActionButton
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Нет данных";
    [Parameter] public string Message { get; set; } = "Данные не найдены";
    [Parameter] public string IconClass { get; set; } = "fa-search";
    [Parameter] public RenderFragment? ActionButton { get; set; }
}
