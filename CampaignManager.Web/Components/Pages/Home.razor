@page "/"
@using CampaignManager.Web.Components.Features.Campaigns.Components
@using CampaignManager.Web.Components.Navigation
@using Microsoft.AspNetCore.Components.Authorization
<PageTitle>Менеджер кампаний</PageTitle>

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <!-- Welcome Hero Section -->
            <div class="hero-section">
                <div class="hero-overlay"></div>
                <div class="hero-content">
                    <div class="flex items-center justify-between">
                        <div class="hero-text">
                            <h1 class="hero-title">
                                Добро пожаловать в Менеджер кампаний
                            </h1>
                            <p class="hero-subtitle">
                                Погрузитесь в мистические приключения Call of Cthulhu и управляйте кампаниями с непревзойденной легкостью
                            </p>
                            <div class="hero-features">
                                <div class="hero-feature">
                                    <i class="fas fa-dice-d20"></i>
                                    <span>Создавайте персонажей</span>
                                </div>
                                <div class="hero-feature">
                                    <i class="fas fa-users"></i>
                                    <span>Управляйте кампаниями</span>
                                </div>
                                <div class="hero-feature">
                                    <i class="fas fa-book-open"></i>
                                    <span>Ведите хроники ужаса</span>
                                </div>
                            </div>
                        </div>
                        <div class="hero-icon-container">
                            <div class="hero-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Grid -->
            <div class="quick-actions-section">
                <h2 class="section-title">Быстрые действия</h2>
                <div class="quick-actions-grid">
                    <a href="/create-campaign" class="quick-action-card create">
                        <div class="quick-action-icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <span class="quick-action-text">Создать кампанию</span>
                        <div class="quick-action-glow"></div>
                    </a>
                    
                    <a href="/characters/create" class="quick-action-card character">
                        <div class="quick-action-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <span class="quick-action-text">Новый персонаж</span>
                        <div class="quick-action-glow"></div>
                    </a>
                    
                    <a href="/scenarios" class="quick-action-card scenario">
                        <div class="quick-action-icon">
                            <i class="fas fa-scroll"></i>
                        </div>
                        <span class="quick-action-text">Сценарии</span>
                        <div class="quick-action-glow"></div>
                    </a>
                    
                    <a href="/spells" class="quick-action-card spell">
                        <div class="quick-action-icon">
                            <i class="fas fa-magic"></i>
                        </div>
                        <span class="quick-action-text">Заклинания</span>
                        <div class="quick-action-glow"></div>
                    </a>
                    
                    <a href="/bestiary" class="quick-action-card bestiary">
                        <div class="quick-action-icon">
                            <i class="fas fa-dragon"></i>
                        </div>
                        <span class="quick-action-text">Бестиарий</span>
                        <div class="quick-action-glow"></div>
                    </a>
                    
                    <a href="/weapons" class="quick-action-card weapon">
                        <div class="quick-action-icon">
                            <i class="fas fa-sword"></i>
                        </div>
                        <span class="quick-action-text">Арсенал</span>
                        <div class="quick-action-glow"></div>
                    </a>
                </div>
            </div>

            <!-- Main Content Grid -->
            <div class="main-content-grid">
                <!-- User Campaigns - Takes 2 columns -->
                <div class="campaigns-section">
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-dice-d20"></i>
                                Ваши кампании
                            </h3>
                        </div>
                        <div class="card-content">
                            <UserCampaignsComponent/>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="sidebar-section">
                    <!-- Join Campaign -->
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-door-open"></i>
                                Присоединиться
                            </h3>
                        </div>
                        <div class="card-content">
                            <JoinCampaignComponent/>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-history"></i>
                                Недавняя активность
                            </h3>
                        </div>
                        <div class="card-content">
                            <div class="activity-placeholder">
                                <i class="fas fa-moon"></i>
                                <p>В тишине ночи скрываются тайны ваших кампаний...</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Stats -->
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-line"></i>
                                Статистика
                            </h3>
                        </div>
                        <div class="card-content">
                            <div class="stats-grid">
                                <div class="stat-item campaigns">
                                    <div class="stat-number">0</div>
                                    <div class="stat-label">Кампаний</div>
                                </div>
                                <div class="stat-item characters">
                                    <div class="stat-number">0</div>
                                    <div class="stat-label">Персонажей</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Keeper Characters Section -->
            <div class="keeper-section">
                <div class="content-card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-crown"></i>
                            Персонажи в ваших кампаниях
                        </h3>
                    </div>
                    <div class="card-content">
                        <KeeperCharactersComponent/>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <!-- Landing Page for Non-Authenticated Users -->
            <div class="min-h-[80vh] flex items-center justify-center">
                <div class="text-center max-w-4xl mx-auto px-4">
                    <!-- Hero Section -->
                    <div class="mb-12">
                        <div class="mb-8">
                            <i class="fas fa-dice-d20 text-8xl text-blue-600 mb-6"></i>
                        </div>
                        <h1 class="text-5xl font-bold text-gray-900 mb-6">
                            Менеджер кампаний
                        </h1>
                        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                            Управляйте своими кампаниями Call of Cthulhu с легкостью. 
                            Создавайте персонажей, ведите хроники и погружайтесь в мистические приключения.
                        </p>
                        <a href="/api/account/login" 
                           class="inline-flex items-center px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white text-lg font-medium rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl">
                            <svg class="h-5 w-5 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
                                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
                                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
                                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
                                <path fill="none" d="M0 0h48v48H0z"/>
                            </svg>
                            Войти с Google
                        </a>
                    </div>

                    <!-- Features Grid -->
                    <div class="grid md:grid-cols-3 gap-8 mt-16">
                        <div class="text-center">
                            <div class="w-16 h-16 mx-auto bg-blue-100 rounded-full flex items-center justify-center mb-4">
                                <i class="fas fa-users text-2xl text-blue-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold mb-2">Управление кампаниями</h3>
                            <p class="text-gray-600">Создавайте и управляйте кампаниями, приглашайте игроков и ведите хроники</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 mx-auto bg-green-100 rounded-full flex items-center justify-center mb-4">
                                <i class="fas fa-user-circle text-2xl text-green-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold mb-2">Создание персонажей</h3>
                            <p class="text-gray-600">Простой и интуитивный интерфейс для создания уникальных персонажей</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 mx-auto bg-purple-100 rounded-full flex items-center justify-center mb-4">
                                <i class="fas fa-book text-2xl text-purple-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold mb-2">Справочники</h3>
                            <p class="text-gray-600">Полная база данных заклинаний, существ, оружия и предметов</p>
                        </div>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

<style>
