        position: relative;
        padding: 3rem;
        color: white;
    }

    .hero-text {
        flex: 1;
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(45deg, #ffffff, #e0e7ff);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: rgba(255, 255, 255, 0.85);
        margin-bottom: 1.5rem;
        max-width: 36rem;
        line-height: 1.6;
    }

    .hero-features {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .hero-feature {
        display: flex;
        align-items: center;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    .hero-feature i {
        margin-right: 0.5rem;
        color: #fbbf24;
        font-size: 1.1rem;
    }

    .hero-icon-container {
        display: none;
    }

    .hero-icon {
        width: 8rem;
        height: 8rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .hero-icon i {
        font-size: 3.5rem;
        color: #fbbf24;
    }

    @@media (min-width: 1024px) {
        .hero-icon-container {
            display: block;
        }
