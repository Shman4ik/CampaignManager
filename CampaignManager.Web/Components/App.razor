@using CampaignManager.Web.Components.Layout 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>CampaignManager</title>
    <base href="/" />

    @* --- Favicon --- *@
    <link rel="icon" type="image/png" href="favicon.png" />

    @* --- Fonts --- *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    @* --- Blazorise & FontAwesome Icons (Self-hosted are generally preferred) --- *@
    <link href="_content/Blazorise.Icons.FontAwesome/v6/css/all.min.css" rel="stylesheet">

    <environment include="Development">
        @* Load Tailwind JIT CDN - ONLY for development convenience. Build process handles production CSS. *@
        <script src="https://cdn.tailwindcss.com"></script>
        @* Configure Blazorise to work with Tailwind JIT *@
        <script src="_content/Blazorise.Tailwind/blazorise.tailwind.config.js"></script>

        @* Load full Blazorise CSS files for development *@
        <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
        <link href="_content/Blazorise.Tailwind/blazorise.tailwind.css" rel="stylesheet" />

        @* OPTIONAL: Flowbite CSS - Load only if components are used that Blazorise/Tailwind don't cover. Consider removing. *@
        @* <link rel="stylesheet" href="https://unpkg.com/flowbite@2.3.0/dist/flowbite.min.css" />  *@ @* Updated version example *@
    </environment>
    <environment exclude="Development">
        <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
        <link href="_content/Blazorise.Tailwind/blazorise.tailwind.css" rel="stylesheet" />
    </environment>
      <HeadOutlet />
</head>
<body>
    <Routes />
    <script src="_framework/blazor.web.js" defer></script>    

</body>
</html>
