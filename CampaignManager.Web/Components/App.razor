@using CampaignManager.Web.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <base href="/" />

    <!-- Общие стили для обоих режимов -->
    <link rel="icon" type="image/png" href="favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.4/dist/flowbite.min.css" />
    <link href="_content/Blazorise.Icons.FontAwesome/v6/css/all.min.css" rel="stylesheet">

    <environment include="Development">
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="_content/Blazorise.Tailwind/blazorise.tailwind.config.js"></script>
        <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
        <link href="_content/Blazorise.Tailwind/blazorise.tailwind.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
        <link href="_content/Blazorise.Tailwind/blazorise.tailwind.prod.css" rel="stylesheet" />
    </environment>
    <HeadOutlet />
</head>
<body>
    <CascadingAuthenticationState>
        <Router AppAssembly="@typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        @if (context.User.Identity?.IsAuthenticated == false)
                        {
                            <p>У вас нет прав доступа к этой странице.</p>
                        }
                    </NotAuthorized>
                    <Authorizing>
                        <p>Проверка авторизации...</p>
                    </Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>Извините, по этому адресу ничего не найдено.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>

    <environment include="Development">
        <script src="https://unpkg.com/flowbite@1.5.4/dist/flowbite.js"></script>
    </environment>
    <script src="_framework/blazor.web.js"></script>
</body>
</html>